<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgHistory"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:background="#EEE"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHistoryDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="12 Jan 2024"
                    android:textSize="10sp"
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/tvHistoryStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MENUNGGU"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:background="#EEEEEE"
                    android:textColor="#616161"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvHistoryAsset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Aset"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvHistoryDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi kerusakan..."
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="#616161"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>